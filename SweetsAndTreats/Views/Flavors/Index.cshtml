@{
  Layout = "_Layout";
}

@using SweetsAndTreats.Models;

<h1>Flavors</h1>

@if (@Model.Count == 0)
{
  <h3>No Flavors have been added at this time.</h3>
} 

@foreach (Flavor flavor in Model)
{
  <li>@Html.ActionLink($"{flavor.FlavorName}", "Details", new { id = flavor.FlavorId })</li>
}

<div id="SideBar">
  <p>@Html.ActionLink("Add new flavor", "Create", "Flavors", null, new { id="linkId" })</p>
  <p>@Html.ActionLink("Home", "Index", "Home", null, new { id="linkId" })</p>
</div>
