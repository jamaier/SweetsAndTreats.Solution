@{
  Layout = "_Layout";
}

@model SweetsAndTreats.Models.Treat

<h4>Add a new Treat</h4>

<p>@Html.ValidationMessageFor(model => model.TreatName, "", new { @class = "text-danger", @style = "font-weight: 600;" })</p>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.TreatName)
  @Html.TextBoxFor(model => model.TreatName)
  

  <input type="submit" value="Add new item" class="btn btn-success" />
}
<div id="SideBar">
<p>@Html.ActionLink("Show all Treats", "Index", "Treats", null, new { id = "linkId" })</p>
</div>