@{
  Layout = "_Layout";
}
  
@if (User.Identity.IsAuthenticated)
{
  <h2>Hello @User.Identity.Name!</h2>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn btn-danger" value="Log out" />
  }
}
else
{
  <p>@Html.ActionLink("Register", "Register", "Account", null, new { id="linkId" })</p>
  <p>@Html.ActionLink("Log in", "Login", "Account", null, new { id="linkId" })</p>
}

<div id="SideBar">
<p>@Html.ActionLink("Home", "Index", "Home", null, new { id = "linkId" })</p>
</div>